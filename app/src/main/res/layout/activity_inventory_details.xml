<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InventoryDetailsActivity">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_10sdp">

        <TextView style="@style/txt_satoshi_10_light"
                  android:text="Select Date"
                  android:layout_marginTop="@dimen/_10sdp"/>
        <TextView style="@style/edt_outlined_satoshi_14_dark"
                  android:text="Select Date"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:drawableRight="@drawable/ic_down_arrow"
        />
        <TextView style="@style/txt_satoshi_10_light"
                  android:text="Select Time"
                  android:layout_marginTop="@dimen/_10sdp"/>
        <TextView style="@style/edt_outlined_satoshi_14_dark"
                  android:text="Select Time"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:drawableRight="@drawable/ic_down_arrow"/>
        <TextView style="@style/txt_satoshi_10_light"
                  android:text="Vehicle Info"
                  android:layout_marginTop="@dimen/_10sdp"/>
        <TextView style="@style/edt_outlined_satoshi_14_dark"
                  android:text="Select vehicle"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:drawableRight="@drawable/ic_down_arrow"/>
        <TextView style="@style/txt_satoshi_10_light"
                  android:text="Water Supplier"
                  android:layout_marginTop="@dimen/_10sdp"/>
        <TextView style="@style/edt_outlined_satoshi_14_dark"
                  android:text="Select Supplier"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:drawableRight="@drawable/ic_down_arrow"/>
        <TextView style="@style/txt_satoshi_10_light"
                  android:text="Vehicle Weight (Loaded) "
                  android:layout_marginTop="@dimen/_10sdp"/>
        <EditText style="@style/edt_outlined_satoshi_14_dark"
                  android:text=""
                  android:layout_marginTop="@dimen/_10sdp"/>
        <TextView style="@style/txt_satoshi_10_light"
                  android:text="Vehicle Weight (Empty) "
                  android:layout_marginTop="@dimen/_10sdp"/>
        <EditText style="@style/edt_outlined_satoshi_14_dark"
                  android:text=""
                  android:layout_marginTop="@dimen/_10sdp"/>
        <Button style="@style/btn_bottom"
                android:text="Confirm"
        android:layout_marginHorizontal="0dp"/>



    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>